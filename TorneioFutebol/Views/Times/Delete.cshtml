@model TorneioFutebol.Models.Time

@{
    ViewBag.Title = "Exluir time";
}

<h2>@ViewBag.Title</h2>

<h3>Tem certeza que deseja exluir este time do torneio @Model.Torneio.Nome?</h3>
<div>
    <hr />
    <dl>
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Exluir" class="btn btn-default" />
            @Html.ActionLink("Cancelar", "Gerenciar", "Torneios", new { id = Model.Torneio.Id }, new { @class = "btn btn-default" })
        </div>
    }
</div>
