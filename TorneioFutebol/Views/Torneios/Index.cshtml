@model IEnumerable<TorneioFutebol.Models.Torneio>

@{
    ViewBag.Title = "Index";
}

<h2>Gerenciamnto de torneios</h2>

<p>
    @Html.ActionLink("Criar novo torneio", "Create")
</p>
<table class="table-condensed">
    <tr>
        <th>
            Torneios criados        
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.ActionLink("Gerenciar torneio", "Gerenciar", new { id = item.Id }) |
            @Html.ActionLink("Excluir", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
